// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  password    String
  name        String
  number      String
  description String?
  state       String?
  street      String?
  role        Role    @default(NORMAL)
  verified    Boolean @default(false)
}

model Batch {
  id         Int      @id @default(autoincrement())
  number     String   @unique
  expiryDate DateTime
  vaccine    Vaccine  @relation(fields: [vaccineId], references: [id], onDelete: Cascade)
  vaccineId  Int

  @@index([vaccineId])
}

model Dose {
  id           Int     @id @default(autoincrement())
  minAge       Int
  maxAge       Int
  numberOfDose Int
  gapsInDays   String
  vaccine      Vaccine @relation(fields: [vaccineId], references: [id], onDelete: Cascade)
  vaccineId    Int

  @@index([vaccineId])
}

model Vaccine {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  type         String?
  manufacturer String?
  patients     Patient[]
  doses        Dose[]
  batch        Batch[]
}

model Patient {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?
  number    String
  gender    Gender   @default(MALE)
  dob       DateTime
  street    String?
  vaccine   Vaccine? @relation(fields: [vaccineId], references: [id])
  vaccineId Int?
  @@index([vaccineId])
}

enum Role {
  ADMIN
  NORMAL
}

enum Gender {
  MALE
  FEMALE
  OTHERS
}
