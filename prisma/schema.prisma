// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  name        String
  number      String
  description String?
  state       String?
  street      String?
  verified    Boolean   @default(false)
  role        Role      @default(NORMAL)
  patients    Patient[]
}

model Batch {
  id         Int       @id @default(autoincrement())
  number     String    @unique
  expiryDate DateTime
  patients   Patient[]
  vaccine    Vaccine   @relation(fields: [vaccineId], references: [id], onDelete: Cascade)
  vaccineId  Int

  @@index([vaccineId])
}

model Dose {
  id           Int     @id @default(autoincrement())
  minAge       Int
  maxAge       Int
  numberOfDose Int
  gapsInDays   String
  vaccine      Vaccine @relation(fields: [vaccineId], references: [id], onDelete: Cascade)
  vaccineId    Int

  @@index([vaccineId])
}

model Vaccine {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  type         String?
  manufacturer String?
  doses        Dose[]
  batches      Batch[]
}

model Patient {
  id                   Int      @id @default(autoincrement())
  name                 String
  email                String?
  number               String
  gender               Gender   @default(MALE)
  dob                  DateTime
  firstVaccinationDate DateTime @default(now())
  dosesTaken           Int      @default(1)
  street               String?
  user                 User     @relation(fields: [userId], references: [id])
  userId               Int
  batch                Batch?   @relation(fields: [batchId], references: [id])
  batchId              Int?

  @@index([batchId])
  @@index([userId])
}

enum Role {
  ADMIN
  NORMAL
}

enum Gender {
  MALE
  FEMALE
  OTHERS
}
